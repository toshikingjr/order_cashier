<main class="main">
    <div class="tag_search">
      <%= form_tag table_menus_path(@table.id), method: :get do %>
        <%= select_tag :tag_id,
                     options_from_collection_for_select(Tag.all, :id, :tag_name, params[:tag_id]),
                     {
                       prompt: 'タグで絞り込み検索',
                       onchange: 'submit(this.form);'
                     }
        %>
      <% end %>
    </div>
    <div class="card__wrapper">
      <%= render partial: "menu", collection: @menus %>
    </div>
    <div>
      <%= link_to "カート表示", table_my_order_path(@table.id) %>
    </div>
    <div>
      <%= link_to "注文履歴", table_path(@table.id) %>
    </div>
    <div>
    <%= paginate(@menus) %>
    </div>
</main>
